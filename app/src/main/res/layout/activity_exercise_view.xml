<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseView">

    <TextView
        android:id="@+id/tvEVAssignmentLabel"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Assignment:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvEVAssignment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEV_VidLinkLabel" />

    <TextView
        android:id="@+id/tvEV_VidLinkLabel"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Video Link:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvEVAssignmentLabel"
        app:layout_constraintEnd_toStartOf="@+id/tvEV_VideoLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEVModalityLabel" />

    <TextView
        android:id="@+id/tvEV_VideoLink"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:gravity="start"
        android:hint=" "
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/tvEVAssignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvEV_VidLinkLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvEVModality" />

    <TextView
        android:id="@+id/tvEVModality"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/tvEV_VideoLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvEVModalityLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvEVDiscipline" />

    <TextView
        android:id="@+id/tvEVModalityLabel"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="Modality:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvEV_VidLinkLabel"
        app:layout_constraintEnd_toStartOf="@+id/tvEVModality"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEVDisciplineLabel" />

    <TextView
        android:id="@+id/tvEVNameLabel"
        android:layout_width="117dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:text="Exercise Title"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvEVDiscipline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/tvEVDisciplineLabel"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Discipline:"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvEVModalityLabel"
        app:layout_constraintEnd_toStartOf="@+id/tvEVDiscipline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEVNameLabel"
        app:layout_constraintVertical_bias="0.384" />

    <TextView
        android:id="@+id/tvEVAssignment"
        android:layout_width="0dp"
        android:layout_height="265dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/btnEVAddToClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvEVDiscipline"
        android:layout_width="222dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/tvEVModality"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvEVDisciplineLabel"
        app:layout_constraintTop_toBottomOf="@+id/tvEVNameLabel" />

    <Button
        android:id="@+id/btnEVAddToClient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:text="Add to Client"
        app:layout_constraintBottom_toTopOf="@+id/btnEVExerciseLibrary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnEVExerciseLibrary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:text="Exercise Library"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>